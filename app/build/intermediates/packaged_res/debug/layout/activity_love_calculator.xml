<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#616161"
    tools:context=".LoveCalculator">

    <TextView
        android:id="@+id/love_calc"
        android:layout_width="365dp"
        android:layout_height="77dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/quintessential"
        android:gravity="center"
        android:text="Love Calculator"
        android:textColor="#D50000"
        android:textSize="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name"
        android:layout_width="294dp"
        android:layout_height="57dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="144dp"
        android:background="@drawable/edittext_default_state"
        android:ems="8"
        android:gravity="center"
        android:hint="Enter Your Name "
        android:minHeight="48dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="285dp"
        android:layout_height="49dp"
        android:layout_marginTop="232dp"
        android:fontFamily="@font/quintessential"
        android:gravity="center"
        android:text="Choose a language..."
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_bar1"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:layout_marginBottom="408dp"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="234dp"
        android:layout_height="54dp"
        android:layout_marginBottom="332dp"
        android:background="@drawable/calculate_button"
        android:onClick="calculate"
        android:text="Calculate Love"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/result"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/results_button"
        android:onClick="seeResults"
        android:text="See Results"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/play_again"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/results_button"
        android:text="Play Again"
        android:textColor="@color/white"
        android:onClick="playAgain"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.806"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="175dp"
        android:layout_height="160dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/percentage_heart"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/percentage"
        android:layout_width="101dp"
        android:layout_height="67dp"
        android:layout_marginTop="508dp"
        android:fontFamily="@font/quintessential"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="46dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/programmer_img"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/language_img"
        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>